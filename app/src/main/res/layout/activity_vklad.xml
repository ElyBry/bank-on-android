<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Процентные ставки"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvPercents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvVkladInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Процент"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etPercent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите процент"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Количество месяцев"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etMonths"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите количество месяцев"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnCreateVklad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Создать вклад"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пополнить вклад"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите сумму"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnPopolnitVklad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Пополнить" />

    </LinearLayout>
</ScrollView>
